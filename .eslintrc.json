{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json"],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        // prettier verwenden
        "prettier"
//        "prettier/@typescript-eslint"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            // an Projekt anpassen
            "prefix": "sbsdb",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            // an Projekt anpassen
            "prefix": "sbsdb",
            "style": "camelCase"
          }
        ],
        "@typescript-eslint/dot-notation": "off",
        // UpperCase fuer Variablen erlauben
        "@typescript-eslint/naming-convention": [
          "error",
          { "selector": ["variable", "property"], "format": ["camelCase", "UPPER_CASE"] }
        ],
        // sonst werden alle enum's angemeckert
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": ["error"],
        // Webstorm r√ºckt Leerzeilen ein
        "no-trailing-spaces": "off",
        // console.info, etc. verbieten (aber .debug erlauben)
        "no-restricted-syntax": [
          "error",
          {
            "selector": "CallExpression[callee.object.name=\"console\"][callee.property.name=/^(info|time|timeEnd|trace)$/]",
            "message": "Unexpected property on console object was called"
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
