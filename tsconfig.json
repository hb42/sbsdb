{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2016",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "module": "ES2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
